
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>..:: SISAMIGOS 1.0 ::..</title>
</head>
<body>
    <header>
        <div>
            <h1>..:: Cadastro de Amigos ::..</h1>
        </div>
    </header>
    
    <section>
        <div>
            <!--Todos os campos de preenchimento de tela (formulario) devem ficar dentro da tab <form>-->
            <form method="post">
                <div>
                    <label for="nome">Nome</label>
                    <!--sempre colocar o Name e o ID, algums recursos funcionam emcima do name e outros do id
                        id - é pro navegador, pro JavaScript
                        name - é pro C#, pro servidor (MVC) -->
                    <input type="text" name="nome" id="nome" autofocus="autofocus" />
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" placeholder="informe um e-Mail comercial" size="30" />
                </div>
                <div>
                    <label for="telefone">Telefone</label>
                    <input type="tel" name="telefone" id="telefone"/>
                </div>
                <div>
                    <label for="data">Data de Nascimento</label>
                    <input type="date" name="data" id="data" />
                </div>
                <div>
                    <label for="sexo">Sexo</label>
                    <select name="sexo" id="sexo">
                        <option value="0">Selecione...</option>
                        <option value="1">Feminino</option>
                        <option value="2">Masculino</option>
                    </select>
                </div> 
                @* comentários em razor (C#) não são visíveis no navegador eles só são visiveis no Visual Studio *@
                <div>
                    <input type="reset" name="limpar" id="limpar" value="Limpar" />
                    <input type="submit" name="cadastrar" id="cadastrar" value="Cadastrar" />
                </div>
            </form>
        </div>
    </section>

    <footer>
        <div>
            <p>&copy; Todos os Direitos Reservados ao <strong>LGROUP</strong></p>
        </div>
    </footer>
</body>
</html>
